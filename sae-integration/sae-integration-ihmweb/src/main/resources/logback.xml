<configuration scan="true" scanPeriod="30 seconds">

   <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%logger] - %msg%n</pattern>
      </encoder>
   </appender>
   
   
   <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
     <!--
      <file>C:/sae/integration/logs/logs_appli_integration.log</file>
   -->
      <file>/hawai/logs/ged/logs_sae_integration.log</file>
   
      
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
   <!--
         <fileNamePattern>c:/logs/logs_appli_integration.%d{yyyy-MM-dd}.log</fileNamePattern>
   -->
     
         <fileNamePattern>/hawai/logs/ged/logs_sae_integration.%d{yyyy-MM-dd}.log</fileNamePattern>
   
        
         <maxHistory>30</maxHistory>
         
      </rollingPolicy>
      
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%logger] - %msg%n</pattern>
      </encoder>
      
   </appender>
   
   
   <!--
   <logger name="fr.urssaf.image.sae" level="debug"/>
   -->
   
   <root level="INFO">
      <appender-ref ref="STDOUT" />
      <appender-ref ref="FILE" />
   </root>
  
</configuration>