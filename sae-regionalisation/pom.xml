      <logback.version>1.0.0</logback.version>
      <org.slf4j.version>1.6.4</org.slf4j.version>
      <jcl-over-slf4j.version>1.6.4</jcl-over-slf4j.version>
      <log4j-over-slf4j.version>1.6.4</log4j-over-slf4j.version>
