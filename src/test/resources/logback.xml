<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-5level] %thread %logger%n%msg%n%n</pattern>
        </encoder>
    </appender>

    <logger name="me.xhh" level="info" />
    <logger name="other.package" level="info" />
    <logger name="me.prettyprint.cassandra.hector.TimingLogger" level="warn" />
    
    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>