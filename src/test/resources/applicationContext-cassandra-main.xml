<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!--
      On ne travaille pas en mode transactionnel, mais un
      transactionManager est obligatoire
   -->
   <bean
      class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
      <property name="locations">
         <value>classpath:cassandra-local.properties</value>
      </property>
   </bean>

   <!-- Déclaration des DAO utilisées par spring-batch -->
   
   <bean id="cassandraJobInstanceDao"
      class="fr.urssaf.image.commons.cassandra.spring.batch.dao.CassandraJobInstanceDao">
      <constructor-arg ref="jobInstanceDaoCqlImpl" />
      <constructor-arg ref="cassandraJobInstanceDaoThrift" />
   </bean>
   <bean id="jobInstanceIdGenerator"
      class="fr.urssaf.image.commons.cassandra.spring.batch.idgenerator.JobInstanceIdGenerator">
      <constructor-arg ref="keyspace" />
      <constructor-arg ref="zkClient" />
      <constructor-arg ref="jobClockSupport"/>
   </bean>
   <bean id="cassandraJobExecutionDao"
      class="fr.urssaf.image.commons.cassandra.spring.batch.dao.CassandraJobExecutionDao">
      <constructor-arg ref="jobExecutionDaoCqlImpl" />
      <constructor-arg ref="cassandraJobExecutionDaoThrift" />
   </bean>
   <bean id="jobExecutionIdGenerator"
      class="fr.urssaf.image.commons.cassandra.spring.batch.idgenerator.JobExecutionIdGenerator">
      <constructor-arg ref="keyspace" />
      <constructor-arg ref="zkClient" />
      <constructor-arg ref="jobClockSupport"/>
   </bean>
   <bean id="cassandraStepExecutionDao"
      class="fr.urssaf.image.commons.cassandra.spring.batch.dao.CassandraStepExecutionDao">
      <constructor-arg ref="jobStepExecutionDaoCqlImpl" />
      <constructor-arg ref="cassandraStepExecutionDaoThrift" />
   </bean>
   <bean id="stepExecutionIdGenerator"
      class="fr.urssaf.image.commons.cassandra.spring.batch.idgenerator.StepExecutionIdGenerator">
      <constructor-arg ref="keyspace" />
      <constructor-arg ref="zkClient" />
      <constructor-arg ref="jobClockSupport"/>
   </bean>
   <bean id="cassandraExecutionContextDao"
      class="fr.urssaf.image.commons.cassandra.spring.batch.dao.CassandraExecutionContextDao">
      <constructor-arg ref="cassandraExecutionContextDaoCqlImpl" />
      <constructor-arg ref="cassandraExecutionContextDaoThrift" />
   </bean>
	
   <!--  thrift BEANS -->
   
   <bean id="cassandraStepExecutionDaoThrift"
      class="fr.urssaf.image.commons.cassandra.spring.batch.dao.thrift.CassandraStepExecutionDaoThrift">
      <constructor-arg ref="keyspace" />
      <constructor-arg ref="stepExecutionIdGenerator" />
   </bean>
   <bean id="cassandraExecutionContextDaoThrift"
      class="fr.urssaf.image.commons.cassandra.spring.batch.dao.thrift.CassandraExecutionContextDaoThrift">
      <constructor-arg ref="keyspace" />
   </bean>
   <bean id="cassandraJobExecutionDaoThrift"
      class="fr.urssaf.image.commons.cassandra.spring.batch.dao.thrift.CassandraJobExecutionDaoThrift">
      <constructor-arg ref="keyspace" />
      <constructor-arg ref="jobExecutionIdGenerator" />
   </bean>
   <bean id="cassandraJobInstanceDaoThrift"
      class="fr.urssaf.image.commons.cassandra.spring.batch.dao.thrift.CassandraJobInstanceDaoThrift">
      <constructor-arg ref="keyspace" />
      <constructor-arg ref="jobInstanceIdGenerator" />
   </bean>
   
	<!--  CQL BEANS -->
	<context:component-scan base-package="fr.urssaf.image.commons.cassandra.spring" />
   

	
	
	
   <!-- Importation de la définition du keyspace et de zkClient -->
   <import resource="classpath*:/applicationContext-commons-cassandra.xml" />

</beans>