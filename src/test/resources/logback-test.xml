<configuration>

   <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSk} %-5level %logger - %msg%n</pattern>
      </encoder>
   </appender>
   
   <logger name="org.springframework" level="WARN" />
   <logger name="org.apache.cassandra" level="ERROR" />
   <logger name="org.apache.zookeeper" level="ERROR" />
   <logger name="me.prettyprint.cassandra" level="WARN" />
   <logger name="com.netflix.curator" level="ERROR" />
   <logger name="org.cassandraunit" level="WARN" />
   
   <logger name="fr.urssaf.image.commons" level="WARN" />
   
   <root level="debug">
      <appender-ref ref="console" />
   </root>

</configuration>