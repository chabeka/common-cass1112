<?xml version="1.0" encoding="UTF-8"?>
<assembly
   xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">

   <id>zip</id>

   <formats>
      <format>zip</format>
   </formats>

   <includeBaseDirectory>false</includeBaseDirectory>

   <fileSets>

      <!-- Copie des fichiers de configurations pour l'ihm d'exploit -->
      <fileSet>
         <directory>src/config/sae-ihm-web-exploit</directory>
         <includes>
            <include>sae-ihm-web-exploit-config-environnement.xml</include>
         </includes>
         <outputDirectory>config-sae-ihm-web-exploit</outputDirectory>
      </fileSet>

      <fileSet>
         <directory>src/config/sae-ihm-web-exploit</directory>
         <includes>
            <include>sae-ihm-web-exploit-config-generale.properties</include>
         </includes>
         <outputDirectory>config-sae-ihm-web-exploit</outputDirectory>
      </fileSet>

      <fileSet>
         <directory>src/config/sae-ihm-web-exploit</directory>
         <includes>
            <include>sae-ihm-web-exploit-config-maquette.properties</include>
         </includes>
         <outputDirectory>config-sae-ihm-web-exploit</outputDirectory>
      </fileSet>

      <fileSet>
         <directory>src/config/sae-ihm-web-exploit</directory>
         <includes>
            <include>sae-ihm-web-exploit-droits.xml</include>
         </includes>
         <outputDirectory>config-sae-ihm-web-exploit</outputDirectory>
      </fileSet>

      <fileSet>
         <directory>src/config/sae-ihm-web-exploit</directory>
         <includes>
            <include>sae-ihm-web-exploit-metadonnee-affichage.xml</include>
         </includes>
         <outputDirectory>config-sae-ihm-web-exploit</outputDirectory>
      </fileSet>

      <fileSet>
         <directory>src/config/sae-ihm-web-exploit</directory>
         <includes>
            <include>sae-ihm-web-exploit-metadonnee-recherche.xml</include>
         </includes>
         <outputDirectory>config-sae-ihm-web-exploit</outputDirectory>
      </fileSet>

      <!--  Fichier de configuration du portail Anais -->
      <fileSet>
         <directory>src/config/sae-anais-portail</directory>
         <includes>
            <include>sae-anais-portail-config-maquette-ihmwebexploit.properties</include>
         </includes>
         <outputDirectory>config-sae-anais-portail</outputDirectory>
      </fileSet>

      <fileSet>
         <directory>src/config/sae-anais-portail</directory>
         <includes>
            <include>sae-anais-portail-ihmwebexploit.properties</include>
         </includes>
         <outputDirectory>config-sae-anais-portail</outputDirectory>
      </fileSet>

      <!--
         Copie des fichiers de configurations pour le portail de
         connexion anais
      -->
   </fileSets>

   <dependencySets>
      <dependencySet>
         <useProjectArtifact>false</useProjectArtifact>
         <outputFileNameMapping>
            ${artifact.artifactId}.${artifact.extension}
         </outputFileNameMapping>
         <includes>
            <include>fr.urssaf.image.sae:sae-ihm-web-exploit</include>
         </includes>
      </dependencySet>
            <dependencySet>
         <useProjectArtifact>false</useProjectArtifact>
         <outputFileNameMapping>
            ${artifact.artifactId}-ihmwebexploit.${artifact.extension}
         </outputFileNameMapping>
         <includes>
            <include>fr.urssaf.image.saedemos:sae-anais-portail</include>
         </includes>
      </dependencySet>
   </dependencySets>



</assembly>