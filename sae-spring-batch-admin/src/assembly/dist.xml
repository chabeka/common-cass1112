<assembly>
   <id>dist</id>
   <formats>
      <format>zip</format>
   </formats>
   <includeBaseDirectory>false</includeBaseDirectory>
   <files>
      <file>
         <source>${project.basedir}/sae-spring-batch-admin-sample/target/sae-spring-batch-admin-sample-${version}.war
         </source>
         <outputDirectory>sae-spring-batch-admin</outputDirectory>
         <destName>sae-spring-batch-admin.war</destName>
      </file>
   </files>
   <fileSets>
      <fileSet>
         <directory>src/assembly</directory>
         <outputDirectory></outputDirectory>
         <includes>
            <include>license.txt</include>
            <include>notice.txt</include>
         </includes>
      </fileSet>
      <fileSet>
         <directory>${project.basedir}/sae-spring-batch-admin-manager/src
         </directory>
         <outputDirectory>/sources/sae-spring-batch-admin-manager
         </outputDirectory>
      </fileSet>
      <fileSet>
         <directory>${project.basedir}/sae-spring-batch-admin-parent/src
         </directory>
         <outputDirectory>/sources/sae-spring-batch-admin-parent
         </outputDirectory>
      </fileSet>
      <fileSet>
         <directory>${project.basedir}/sae-spring-batch-admin-resources/src
         </directory>
         <outputDirectory>/sources/sae-spring-batch-admin-resources
         </outputDirectory>
      </fileSet>
      <fileSet>
         <directory>${project.basedir}/sae-spring-batch-admin-sample/src
         </directory>
         <outputDirectory>/sources/sae-spring-batch-admin-sample
         </outputDirectory>
      </fileSet>
      <fileSet>
         <directory>${project.basedir}/sae-spring-batch-integration/src
         </directory>
         <outputDirectory>/sources/sae-spring-batch-integration
         </outputDirectory>
      </fileSet>
      <fileSet>
         <!-- adds reference manual (html and pdf) to the distribution archive 
            under the 'docs/reference' directory see pom.xml 'maven-javadoc-plugin' declaration -->
         <directory>${project.basedir}/target/generated-site</directory>
         <outputDirectory>/sources/docs/reference</outputDirectory>
      </fileSet>
   </fileSets>
</assembly>
