   <modelVersion>4.0.0</modelVersion>
   <artifactId>sae-spring-batch-admin-manager</artifactId>
   <packaging>jar</packaging>
   <description><![CDATA[Web and service tier of Spring Batch Admin console.  Basic use cases include
visualization of Batch meta data, and also launching and stopping jobs inside the webapp container.]]></description>
   <parent>
      <artifactId>sae-spring-batch-admin-parent</artifactId>
      <groupId>org.springframework.batch</groupId>
      <version>1.2.3.BUILD-SNAPSHOT</version>
      <relativePath>../sae-spring-batch-admin-parent</relativePath>
   </parent>
   <name>Manager</name>

   <properties>
      <slf4j-api.version>1.6.4</slf4j-api.version>
      <logback.version>1.0.0</logback.version>
      <hector.version>1.0-3</hector.version>
      <commons-cassandra-spring-batch.version>0.0.6</commons-cassandra-spring-batch.version>
