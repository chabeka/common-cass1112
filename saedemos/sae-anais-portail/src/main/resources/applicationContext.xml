<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <!-- Chargement des properties -->
   <import resource="applicationContext-properties.xml"/>
   
   <!-- Configuration ANAIS -->
   <import resource="applicationContext-anais.xml"/>

   <import resource="applicationContext-sae-vi.xml"/>
   
   <bean id="appliSaeConfig"
      class="fr.urssaf.image.sae.anais.portail.configuration.AppliSaeConfig">
      <property name="codeAppli" value="${portail.codeAppliRedirection}" />
      <property name="urlPost" value="${portail.urlPostAuth}" />
      <property name="relayState" value="${portail.relayState}" />
   </bean>

   <bean id="messageSource"
      class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
      <property name="basenames">
         <list>
            <value>/message/labels</value>
         </list>
      </property>
      <property name="cacheSeconds" value="0" />
   </bean>

</beans>