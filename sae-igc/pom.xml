      <artifactId>sae</artifactId>
      <version>20.4.6</version>
   </parent>

   <groupId>fr.urssaf.image.sae</groupId>
   <artifactId>sae-igc</artifactId>
   <version>20.4.6</version>
   <name>sae-igc</name>

   <description>Bibliothèque de manipulation des éléments liés à l'IGC (configuration, téléchargement des CRL)</description>

   <build>
      <plugins>
         <plugin>
            <inherited>true</inherited>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>aspectj-maven-plugin</artifactId>
         </plugin>
      </plugins>
   </build>

   <dependencies>

      <!-- SAE - Trace -->
      <dependency>
         <groupId>fr.urssaf.image.sae</groupId>
         <artifactId>sae-trace</artifactId>
         <version>20.4.6</version>
      </dependency>
      <!-- SAE - storage-dfce -->
      <dependency>
         <groupId>fr.urssaf.image.sae</groupId>
         <artifactId>sae-storage-dfce</artifactId>
         <version>20.4.6</version>
      </dependency>

      <!-- APACHE COMMONS -->

      <dependency>
         <groupId>commons-configuration</groupId>
         <artifactId>commons-configuration</artifactId>
         <version>${apache.commons-configuration.version}</version>
      </dependency>

      <dependency>
         <groupId>commons-io</groupId>
         <artifactId>commons-io</artifactId>
         <version>${apache.commons-io.version}</version>
      </dependency>

      <!-- JASPECT -->

		<dependency>
			<groupId>org.aspectj</groupId>
			<artifactId>aspectjrt</artifactId>
			<version>${aspectj.version}</version>
		</dependency>
		<dependency>
			<groupId>org.aspectj</groupId>
			<artifactId>aspectjweaver</artifactId>
			<version>${aspectj.version}</version>
		</dependency>

      <!-- XSTREAM -->
      <dependency>
         <groupId>com.thoughtworks.xstream</groupId>
