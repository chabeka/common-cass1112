<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!--Chargement du fichier de properties de l'application -->
	<bean id="applicationProperties"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location"
			value="classpath:config/dfce_admin_application.properties" />
	</bean>
	<!--Valorisation des paramètres à partir du fichier properties. -->
	<bean id="hostParameter" class="fr.urssaf.image.sae.dfce.admin.model.HostParameter">
		<property name="hostName" value="${db.hostName}" />
		<property name="hostPort" value="${db.hostPort}" />
		<property name="contextRoot" value="${db.contextRoot}" />
		<property name="secure" value="${db.secure}" />
	</bean>
	<bean id="userParameter" class="fr.urssaf.image.sae.dfce.admin.model.UserParameter">
		<property name="login" value="${db.login}" />
		<property name="password" value="${db.password}" />
	</bean>
	<bean id="ConnectionParameter"
		class="fr.urssaf.image.sae.dfce.admin.model.ConnectionParameter">
		<property name="host" ref="hostParameter" />
		<property name="user" ref="userParameter" />
	</bean>
</beans>