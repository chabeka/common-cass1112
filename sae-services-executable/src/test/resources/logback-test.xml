<configuration scan="true" scanPeriod="30 seconds">

   <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>%d %p [%c] %m%n</pattern>
      </encoder>
   </appender>

   <logger name="org">
      <level value="WARN" />
   </logger>
   
   <!-- Niveau general pour l'application -->
   <root level="DEBUG">
      <appender-ref ref="console" />
   </root>


</configuration>