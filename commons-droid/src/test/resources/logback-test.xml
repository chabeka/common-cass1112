<configuration>

   <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSk} %-5level %logger - %msg%n</pattern>
         <!--
         <pattern>%msg%n</pattern>
         -->
      </encoder>
   </appender>
   
   <logger name="uk.gov.nationalarchives.droid.core" level="WARN" />
   <logger name="org.springframework" level="WARN" />
   
   <root level="DEBUG">
      <appender-ref ref="console" />
   </root>

</configuration>