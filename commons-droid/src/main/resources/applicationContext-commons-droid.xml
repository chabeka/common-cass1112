<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context="http://www.springframework.org/schema/context"
   xmlns:jee="http://www.springframework.org/schema/jee"
   xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">


   <!-- Chargement du fichier des signatures binaires DROID -->
   <bean
      id="signaturesResource"
      class="org.springframework.core.io.ClassPathResource">
      <constructor-arg value="DROID_SignatureFile_V65.xml" />
   </bean>

   
   <!--
   Instantiation du mécanisme DROID d'identification d'un format de fichier à
   partir d'un fichier de signatures binaires.
   -->
   <bean
      id="binarySignatureIdentifier"
      class="fr.urssaf.image.commons.droid.factory.DroidFactory"
      factory-method="loadSignatures">
      <constructor-arg ref="signaturesResource" />
   </bean>
   
   
   <!-- Chargement du fichier des signatures containers DROID -->
   <bean
      id="containerSignaturesResource"
      class="org.springframework.core.io.ClassPathResource">
      <constructor-arg value="container-signature.xml" />
   </bean>
   
   
   <!--
   Chargement du fichier des formats conteneurs Droid
   Le bean est de type uk.gov.nationalarchives.droid.container.ContainerSignatureDefinitions
   -->
   <bean
      id="containerSignatureDefinitions"
      class="fr.urssaf.image.commons.droid.factory.DroidFactory"
      factory-method="loadContaineur">
      <constructor-arg ref="containerSignaturesResource" />
   </bean>
   
   
   <!--
   Component-scan
   Il faudra avoir mis au préalable dans le conteneur IOC une instance de :
    uk.gov.nationalarchives.droid.core.BinarySignatureIdentifier 
    uk.gov.nationalarchives.droid.container.ContainerSignatureDefinitions
   -->   
   <context:component-scan base-package="fr.urssaf.image.commons.droid" />



</beans>