<?xml version="1.0" encoding="UTF-8"?>
<configuration>

   <appender
      name="fichier"
      class="ch.qos.logback.core.rolling.RollingFileAppender">
      
      <file>c:/monAppli.log</file>
      
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
         <fileNamePattern>c:/monAppli-%d{yyyyMMdd}.log</fileNamePattern>
         <maxHistory>15</maxHistory>
      </rollingPolicy>
      
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSk} %-5level %logger - %msg%n</pattern>
      </encoder>
      
   </appender>
   
   <root level="TRACE">
      <appender-ref ref="fichier" />
   </root>
  
</configuration>
