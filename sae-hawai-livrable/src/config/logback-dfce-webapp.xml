<configuration scan="true" scanPeriod="30 seconds">
   
   <!-- 
   
   Rappels des niveaux de trace : TRACE, DEBUG, INFO, WARN, ERROR, OFF
   
   
   Tableau de sortie des traces en fonction du niveau de trace demande
   dans l'appel du logger et du niveau de trace actif dans la config
   
   |________________________________________________________________________|
   | Niveau de trace      | Niveau de trace effectif dans la configuration  |
   | utilise dans l'appel |                                                 |
   | du logger            | TRACE | DEBUG | INFO  | WARN  | ERROR | OFF     |
   |________________________________________________________________________|
   | TRACE                |  Oui  |  Non  |  Non  |  Non  |  Non  |  Non    |
   |________________________________________________________________________|
   | DEBUG                |  Oui  |  Oui  |  Non  |  Non  |  Non  |  Non    |
   |________________________________________________________________________|
   | INFO                 |  Oui  |  Oui  |  Oui  |  Oui  |  Non  |  Non    |
   |________________________________________________________________________|
   | WARN                 |  Oui  |  Oui  |  Oui  |  Oui  |  Non  |  Non    |
   |________________________________________________________________________|
   | ERROR                |  Oui  |  Oui  |  Oui  |  Oui  |  Oui  |  Non    |
   |________________________________________________________________________|
   
   -->
   
   
   
   <property name="LOGS_FOLDER" value="@LOGS_PATH@" />
   
   <property name="LOGS_FILENAME_PREFIXE" value="dfce-webapp" />
   
   <timestamp key="byDay" datePattern="yyyyMMdd" />
   
   
   <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSk} %-5level %logger
[%X{log_contexte_uuid}] - %msg%n</pattern>
      </encoder>
   </appender>



  <!--
   L'appender fichier pour les traces de niveaux WARN et ERROR
   -->
   <appender name="log-file"
      class="ch.qos.logback.core.rolling.RollingFileAppender">
      
      <file>${LOGS_FOLDER}/${LOGS_FILENAME_PREFIXE}.log</file>
      
      <triggeringPolicy
         class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
         <maxFileSize>20MB</maxFileSize>
      </triggeringPolicy>
      
     <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
         <fileNamePattern>${LOGS_FOLDER}/${LOGS_FILENAME_PREFIXE}.%d{yyyyMMdd}.log</fileNamePattern>
         <maxHistory>20</maxHistory>
      </rollingPolicy>
      
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger
            [%X{log_contexte_uuid}] - %msg%n</pattern>
      </encoder>
      
   </appender>
    
    <logger name="org.springframework.beans.factory" level="INFO"  additivity="false">
    	<appender-ref ref="log-file" />
    </logger>

    <logger name="org.apache.cxf" level="INFO" additivity="false">
    	<appender-ref ref="log-file" />
    </logger>
    <logger name="me.prettyprint.cassandra" level="WARN" additivity="false">
    	<appender-ref ref="log-file" />
    </logger>
    <logger name="org.springframework.scheduling.quartz" level="INFO" additivity="false">
    	<appender-ref ref="log-file" />
    </logger>
    <logger name="org.quartz.core" level="INFO" additivity="false">
    	<appender-ref ref="log-file" />
    </logger>
    <logger name="net.sf.ehcache.util" level="WARN" additivity="false">
    	<appender-ref ref="log-file" />
    </logger>
    <logger name="org.springframework.cache.ehcache" level="WARN" additivity="false">
    	<appender-ref ref="log-file" />
    </logger>

    <logger name="com.docubase.dfce.dao.impl" level="INFO" additivity="false">
    	<appender-ref ref="log-file" />
    </logger>
    <logger name="com.docubase.dfce.manager.impl" level="INFO" additivity="false">
    	<appender-ref ref="log-file" />
    </logger>
    <logger name="com.docubase.dfce.lucandra.index" level="INFO" additivity="false">
    	<appender-ref ref="log-file" />
    </logger>
    <logger name="com.docubase.dfce.lucandra.impl" level="INFO" additivity="false">
    	<appender-ref ref="log-file" />
    </logger>


    <!-- A activer pour passer en debuggage -->
    <!--<logger name="com.docubase.dfce" level="DEBUG" additivity="false">
    	<appender-ref ref="log-file" />
    </logger>-->
   
   
   <!-- Niveau general pour l'application -->
   <root level="WARN">
      <appender-ref ref="log-file" />
      <appender-ref ref="STDOUT" />
   </root>
   
   
</configuration>
