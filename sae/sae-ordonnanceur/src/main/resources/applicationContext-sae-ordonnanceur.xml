<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <import resource="applicationContext-commons-cassandra-spring-batch.xml" />

   <import resource="applicationContext-sae-ordonnanceur-service.xml" />

   <!-- configuration ECDE -->
   <bean id="ecdeSourceManager" class="fr.urssaf.image.sae.ecde.EcdeSourceManagerImpl" />
   <bean id="ecdeConfigFile" class="java.io.File">
      <constructor-arg value="${sae.ecde.cheminFichierConfig}" />
   </bean>
   <bean id="ecdeSources" factory-bean="ecdeSourceManager"
      factory-method="load">
      <constructor-arg ref="ecdeConfigFile" />
   </bean>

   <!-- Bean pour pour le traitement de l'archivage en masse -->
   <bean id="captureMasseLauncher"
      class="fr.urssaf.image.sae.ordonnanceur.support.CaptureMasseLauncherSupport">
      <qualifier value="captureMasseLauncher" />
      <constructor-arg value="${sae.archivagemasse.executable}" />
      <constructor-arg ref="saeConfigResource" />
   </bean>


</beans>