<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
        http://www.springframework.org/schema/beans	
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <bean id="resourceSaeConfig" class="org.springframework.core.io.ClassPathResource">
      <constructor-arg value="config/sae-config-dfceKO-test.properties" />
   </bean>
   
   <bean class="java.io.File" id="fileSaeConfig">
      <constructor-arg>
         <bean factory-bean="resourceSaeConfig" factory-method="getURI" />
      </constructor-arg>
   </bean>

   <bean id="saeConfigResource" class="org.springframework.core.io.FileSystemResource">
      <constructor-arg>
         <bean factory-bean="fileSaeConfig" factory-method="getAbsolutePath" />
      </constructor-arg>
   </bean>


   <import resource="applicationContext-sae-ordonnanceur-dfce.xml" />

   <bean id="dfceSupport"
      class="fr.urssaf.image.sae.ordonnanceur.support.impl.DFCESupportImpl">
      <constructor-arg ref="dfceServices" />
   </bean>


</beans>