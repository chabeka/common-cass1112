<?xml version="1.0" encoding="UTF-8"?>
   <IgcConfigs>
      <IgcConfig>
         
         <!-- un identifiant pour différencier les PKI de ce fichier.
             cet identifiant doit pouvoir être utilisé comme nom de répertoire -->
         <id>PKI_TEST</id>
         
         <!-- 
           Le chemin du fichier qui représente le certificat de l'AC racine de la PKI          
         -->
         <certifACRacine>src/test/resources/certificats/PKI_TEST/ACRacine/pseudo_IGCA.crt</certifACRacine>
         
         
         <!-- 
           Repertoire contenant les CRL de toutes les AC utilisees par le SAE
           Les CRL y sont stockes sous forme de fichiers .crl
           
           Exemples de valeurs :
             c:\sae\certificats\CRL
             /appl/sae/certificats/CRL
             
         -->
         <repertoireCRL>src/test/resources/certificats/PKI_TEST/CRL/</repertoireCRL>
         
         
         <!-- 
           URL(s) de telechargement des CRL.
           Ces URL doivent se terminer par un pattern indiquant
           les fichiers a telecharger.
           
           Exemple d'URL :
             http://serveur/*.crl
             http://serveur/repertoire/*.crl
         -->
         <URLTelechargementCRL>
           <url>http://cer69idxpkival1.cer69.recouv/*.crl</url>
         </URLTelechargementCRL>
         
         <!--
            Les DN des AC de la PKI autorisées à déliver des certificats applicatifs.
            Ce sont donc les DN possibles pour l'issuer du certificat de signature
            utilisé pour signer le VI.
         -->
        <issuers>
          <issuer>CN=IGC/A</issuer>
        </issuers>
           
         
      </IgcConfig>
   </IgcConfigs>
