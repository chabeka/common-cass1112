<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<keyspace xmlns="http://xml.dataset.cassandraunit.org"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xml.dataset.cassandraunit.org cassandraUnitDataset.xsd ">

   <name>KEYSPACE_TU</name>

   <strategy>org.apache.cassandra.locator.SimpleStrategy</strategy>
   <replicationFactor>1</replicationFactor>

   <columnFamilies>

      <!--
      Les droits
      -->
      <columnFamily>
         <name>DroitActionUnitaire</name>
         <comparatorType>BytesType</comparatorType>
      </columnFamily>
      <columnFamily>
         <name>DroitContratService</name>
         <comparatorType>BytesType</comparatorType>
      </columnFamily>
      <columnFamily>
         <name>DroitPagma</name>
         <comparatorType>BytesType</comparatorType>
      </columnFamily>
      <columnFamily>
         <name>DroitPagmp</name>
         <comparatorType>BytesType</comparatorType>
      </columnFamily>
      <columnFamily>
         <name>DroitPagm</name>
         <comparatorType>BytesType</comparatorType>
      </columnFamily>
      <columnFamily>
         <name>DroitPrmd</name>
         <comparatorType>BytesType</comparatorType>
      </columnFamily>


      <!-- Gestion des formats -->
      <columnFamily>
         <name>DroitFormatControlProfil</name>
         <keyType>UTF8Type</keyType>
         <comparatorType>UTF8Type</comparatorType>
         <defaultColumnValueType>UTF8Type</defaultColumnValueType>

         <row>
            <key>INT_FORMAT_PROFIL_ATT_VIGI</key>
            <column>
               <name>description</name>
               <value>Contrôle sur les fichiers fournis par l'attestation vigilance.</value>
            </column>
            <column>
               <name>controlProfil</name>
               <value>
                  {"formatValidationMode":"STRICT","formatIdentification":false,"formatValidation":true,"fileFormat":"fileFormat"}
               </value>
            </column>
         </row>
      </columnFamily>

      <columnFamily>
         <name>DroitPagmf</name>
         <keyType>UTF8Type</keyType>
         <comparatorType>UTF8Type</comparatorType>
         <defaultColumnValueType>UTF8Type</defaultColumnValueType>

         <row>
            <key>INT_PAGM_ATT_VIGI_ALL_PAGMF</key>
            <column>
               <name>description</name>
               <value>Contrôle sur les fichiers fournis par l'attestation vigilance.</value>
            </column>
            <column>
               <name>formatProfile</name>
               <value>INT_FORMAT_PROFIL_ATT_VIGI</value>
            </column>
         </row>
      </columnFamily>

   </columnFamilies>

</keyspace>