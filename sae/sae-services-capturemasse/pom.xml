<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

   <modelVersion>4.0.0</modelVersion>

   <parent>
      <groupId>fr.urssaf.image.sae</groupId>
      <artifactId>sae</artifactId>
      <version>13.11.0.2-SNAPSHOT</version>
   </parent>

   <groupId>fr.urssaf.image.sae</groupId>
   <artifactId>sae-services-capturemasse</artifactId>
   <version>13.11.0.2-SNAPSHOT</version>

   <name>sae-services-capturemasse</name>

   <description>Art√©fact contenant les services capture de masse</description>

   <properties>
      <sonar.exclusions>fr/urssaf/image/sae/services/capturemasse/modele/commun_sommaire_et_resultat/*.java,fr/urssaf/image/sae/services/capturemasse/modele/resultats/*.java,fr/urssaf/image/sae/services/capturemasse/modele/sommaire/*.java</sonar.exclusions>
   </properties>

   <profiles>
      <profile>
         <id>genererCodeModeleSommaireEtResultat</id>
         <build>
            <plugins>
               <plugin>
                  <groupId>com.sun.tools.xjc.maven2</groupId>
                  <artifactId>maven-jaxb-plugin</artifactId>
                  <executions>
                     <execution>
                        <goals>
                           <goal>generate</goal>
                        </goals>
                     </execution>
                  </executions>
                  <configuration>
                     <schemaDirectory>${basedir}/src/main/resources/xsd_som_res</schemaDirectory>
                     <generateDirectory>${basedir}/src/main/java</generateDirectory>
                     <includeSchemas>
                        <includeSchema>commun_sommaire_et_resultat.xsd</includeSchema>
                        <includeSchema>sommaire.xsd</includeSchema>
                        <includeSchema>resultats.xsd</includeSchema>
                        <includeSchema>document.xsd</includeSchema>
                     </includeSchemas>
                  </configuration>
               </plugin>

               <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-antrun-plugin</artifactId>
                  <version>${maven-antrun-plugin.version}</version>
                  <executions>
                     <execution>
                        <phase>generate-sources</phase>
                        <configuration>
                           <target name="suppressWarnings('PMD')">
                              <replace dir="${basedir}/src/main/java"
                                 includes="fr/urssaf/image/sae/services/capturemasse/modele/*/*.java"
                                 token="public class"
                                 value="@SuppressWarnings(&quot;PMD&quot;)&#xA;public class" />
                           </target>
                        </configuration>
                        <goals>
                           <goal>run</goal>
                        </goals>
                     </execution>
                  </executions>
               </plugin>

            </plugins>
         </build>
      </profile>
   </profiles>

   <build>
      <plugins>

         <!-- Compilation Aspect -->
         <plugin>
            <inherited>true</inherited>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>aspectj-maven-plugin</artifactId>
            <configuration>
               <argumentFileName>builddef-sae-services-capturemasse.lst</argumentFileName>
            </configuration>
         </plugin>

      </plugins>
   </build>


   <dependencies />

</project>