<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <parent>
      <artifactId>sae-parent</artifactId>
      <groupId>fr.urssaf.image.sae</groupId>
      <version>0.0.1-SNAPSHOT</version>
   </parent>
   <modelVersion>4.0.0</modelVersion>
   <groupId>fr.urssaf.image.sae</groupId>
   <artifactId>sae-services-executable</artifactId>
   <name>sae-services-executable</name>
   <version>0.0.1-SNAPSHOT</version>
   <description>Appel des services du SAE par  ligne de commande</description>


   <build>

      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-shade-plugin</artifactId>
            <version>1.4</version>
            <executions>
               <execution>
                  <phase>package</phase>
                  <goals>
                     <goal>shade</goal>
                  </goals>
                  <configuration>
                     <finalName>sae-services-exe</finalName>
                     <artifactSet>
                        <excludes>
                           <exclude>log4j:log4j:jar:</exclude>
                           <exclude>commons-logging:commons-logging:jar:</exclude>
                        </excludes>
                     </artifactSet>
                     <transformers>
                        <transformer
                           implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                           <mainClass>fr.urssaf.image.sae.services.executable.ServicesMain</mainClass>
                        </transformer>
                        <transformer
                           implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                           <resource>META-INF/spring.handlers</resource>
                        </transformer>
                        <transformer
                           implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                           <resource>META-INF/spring.schemas</resource>
                        </transformer>
                     </transformers>
                  </configuration>
               </execution>
            </executions>
         </plugin>

      </plugins>

   </build>

   <dependencies>

      <!-- SAE SERVICES -->

      <dependency>
         <groupId>fr.urssaf.image.sae</groupId>
         <artifactId>sae-services</artifactId>
         <version>0.0.1-SNAPSHOT</version>
      </dependency>

      <!-- SPRING -->

      <dependency>
         <groupId>org.springframework</groupId>
         <artifactId>spring-context</artifactId>
         <version>${spring.framework.version}</version>
      </dependency>
      
      <!-- SLF4J -->

      <dependency>
         <groupId>org.slf4j</groupId>
         <artifactId>jcl-over-slf4j</artifactId>
         <version>1.6.1</version>
         <scope>runtime</scope>
      </dependency>

      <!-- APACHE COMMONS -->

      <dependency>
         <groupId>commons-lang</groupId>
         <artifactId>commons-lang</artifactId>
         <version>${apache.commons-lang.version}</version>
      </dependency>

      <!-- EASYMOCK -->

      <dependency>
         <groupId>org.easymock</groupId>
         <artifactId>easymock</artifactId>
         <version>3.0</version>
         <scope>test</scope>
      </dependency>

   </dependencies>


</project>