<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
                        http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-2.5.xsd">

   <context:component-scan base-package="fr.urssaf.image.sae.ecde" />

   <bean id="messageSource_sae_ecde"
      class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
      <property name="basenames">
         <list>
            <value>validationMessages_sae_ecde</value>
            <value>exceptionMessages_sae_ecde</value>
         </list>
      </property>
      <property name="cacheSeconds" value="0" />
   </bean>
   
   
   <bean id="ecdeTestConfig"
      class="fr.urssaf.image.sae.ecde.util.test.EcdeTestConfig" />
   
   <bean id="ecdeSources"
         factory-bean="ecdeTestConfig"
         factory-method="load">
   </bean>
   
   <bean id="ecdeTestTools"
      class="fr.urssaf.image.sae.ecde.util.test.EcdeTestTools" />
    
</beans>