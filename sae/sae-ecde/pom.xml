<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>

   <groupId>fr.urssaf.image.sae</groupId>
   <artifactId>sae-ecde</artifactId>
   <packaging>jar</packaging>
   <version>0.0.1-SNAPSHOT</version>
   <name>sae-ecde</name>
   <description>Services de manipulation de l'ECDE</description>

   <parent>
      <groupId>fr.urssaf.image.sae</groupId>
      <artifactId>sae-parent</artifactId>
      <version>0.0.1-SNAPSHOT</version>
   </parent>

   <build>
      <plugins>

         <plugin>
            <inherited>true</inherited>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>aspectj-maven-plugin</artifactId>
         </plugin>

      </plugins>
   </build>


   <dependencies>

      <!-- Context -->
      <dependency>
         <groupId>org.springframework</groupId>
         <artifactId>spring-context</artifactId>
         <version>${spring.framework.version}</version>
      </dependency>
      <!-- Fin Context -->

      <!-- Test -->
      <dependency>
         <groupId>org.springframework</groupId>
         <artifactId>spring-test</artifactId>
         <version>${spring.framework.version}</version>
         <scope>test</scope>
      </dependency>
      <!-- Fin Test -->

      <!-- librairie d'utilitaire -->
      <dependency>
         <groupId>commons-lang</groupId>
         <artifactId>commons-lang</artifactId>
         <version>${apache.commons-lang.version}</version>
      </dependency>
      <!-- fin librairie d'utilitaire -->

      <!--  JSR 303 -->
      <dependency>
         <groupId>javax.validation</groupId>
         <artifactId>validation-api</artifactId>
         <version>${jsr303.api.version}</version>
      </dependency>

      <!-- Fin JSR 303 -->

      <!-- Programation Orientée aspect -->
      <dependency>
         <groupId>org.aspectj</groupId>
         <artifactId>aspectjrt</artifactId>
         <version>${aspectj.version}</version>
      </dependency>
      <!-- Fin Programation Orientée aspect -->

      <dependency>
         <groupId>org.apache.commons</groupId>
         <artifactId>commons-io</artifactId>
         <version>1.3.2</version>
      </dependency>


