<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
      http://www.springframework.org/schema/beans  
      http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="fr.urssaf.image.sae.format" />

   <!--
      Fichiers nécessaires pour la compatibilité des formats des
      fichiers
   -->
   <bean id="saeFormatCompatibleFile" class="org.springframework.core.io.ClassPathResource">
      <constructor-arg value="format/sae_format_compatible_format.properties" />
   </bean>

   <bean id="saeFormatCompatible" factory-bean="saeFormatCompatibleFactory"
      factory-method="createSaeFormatCompatible">
      <constructor-arg ref="saeFormatCompatibleFile" />
   </bean>

     
   <!--
      Importation de la définition du keyspace cassandra 
   -->
   <import resource="classpath*:/applicationContext-commons-cassandra.xml" />
   <import resource="classpath*:/applicationContext-commons-droid.xml" />
   <import resource="classpath*:/applicationContext-commons-pdfbox.xml" />
   <import resource="classpath*:/applicationContext-sae-commons.xml" />
   <import resource="classpath*:/applicationContext-commons-itext.xml" />


</beans>