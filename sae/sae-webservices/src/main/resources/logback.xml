<configuration scan="true" scanPeriod="30 seconds">
   
   <!-- 
   
   Rappels des niveaux de trace : TRACE, DEBUG, INFO, WARN, ERROR, OFF
   
   
   Tableau de sortie des traces en fonction du niveau de trace demande
   dans l'appel du logger et du niveau de trace actif dans la config
   
   |________________________________________________________________________|
   | Niveau de trace      | Niveau de trace effectif dans la configuration  |
   | utilise dans l'appel |                                                 |
   | du logger            | TRACE | DEBUG | INFO  | WARN  | ERROR | OFF     |
   |________________________________________________________________________|
   | TRACE                |  Oui  |  Non  |  Non  |  Non  |  Non  |  Non    |
   |________________________________________________________________________|
   | DEBUG                |  Oui  |  Oui  |  Non  |  Non  |  Non  |  Non    |
   |________________________________________________________________________|
   | INFO                 |  Oui  |  Oui  |  Oui  |  Oui  |  Non  |  Non    |
   |________________________________________________________________________|
   | WARN                 |  Oui  |  Oui  |  Oui  |  Oui  |  Non  |  Non    |
   |________________________________________________________________________|
   | ERROR                |  Oui  |  Oui  |  Oui  |  Oui  |  Oui  |  Non    |
   |________________________________________________________________________|
   
   -->
   
   
   
   
   <!-- 
   <property name="LOGS_FOLDER" value="${catalina.base}/logs" />
   -->
 
   <property name="LOGS_FOLDER" value="@LOGS_PATH@" />

	<!--<property name="LOGS_FOLDER" value="c:/hawai/logs/tomcat/ged" />-->

   <property name="LOGS_FILENAME_PREFIXE" value="sae_webservices" />
   
   <timestamp key="byDay" datePattern="yyyyMMdd" />
    
   <property name="LOGS_FILENAME_PREFIXE_CERTIFICAT" value="sae_certificate_validity_info" />
   
   <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSk} %-5level %logger
			[%X{log_contexte_uuid}] - %msg%n</pattern>
      </encoder>
   </appender>

	<!-- 
		Permet d'afficher des logs pour un certificat dont le nombre de jours de validité
		est inferieure à 180 jours. Utilisé dans la classe: 
		fr.urssaf.image.sae.vi.service.impl.WebServiceVIValidateServiceImpl
	-->
   	<appender name="validity-of-certificates" class="ch.qos.logback.core.rolling.RollingFileAppender">
        
        <file>${LOGS_FOLDER}/${LOGS_FILENAME_PREFIXE_CERTIFICAT}.log</file>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
         <fileNamePattern>${LOGS_FOLDER}/${LOGS_FILENAME_PREFIXE_CERTIFICAT}.%d{yyyyMMdd}.log</fileNamePattern>
         <maxHistory>7</maxHistory>
      	</rollingPolicy>
      	
        <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level - %msg%n</pattern>
      	</encoder>
    </appender>
    
   <!--
   L'appender fichier pour les traces de niveaux WARN et ERROR
   -->
   <appender name="log-file"
      class="ch.qos.logback.core.rolling.RollingFileAppender">
      
      <file>${LOGS_FOLDER}/${LOGS_FILENAME_PREFIXE}.log</file>
      
      <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
         <level>WARN</level>
      </filter>
      
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
         <fileNamePattern>${LOGS_FOLDER}/${LOGS_FILENAME_PREFIXE}.%d{yyyyMMdd}.log</fileNamePattern>
         <maxHistory>15</maxHistory>
      </rollingPolicy>
      
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger
            [%X{log_contexte_uuid}] - %msg%n</pattern>
      </encoder>
      
   </appender>
   

   <!-- 
   L'appender fichier debug pour les traces de niveau INFO, DEBUG et TRACE
   -->
   <appender name="debug-file"
      class="ch.qos.logback.core.rolling.RollingFileAppender">
      
      <file>${LOGS_FOLDER}/${LOGS_FILENAME_PREFIXE}-debug.log</file>
      
      <rollingPolicy
         class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
         <fileNamePattern>${LOGS_FOLDER}/${LOGS_FILENAME_PREFIXE}-debug.%i.log</fileNamePattern>
         <maxIndex>10</maxIndex>
      </rollingPolicy>
      
      <triggeringPolicy
         class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
         <maxFileSize>10MB</maxFileSize>
      </triggeringPolicy>
      
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger
            [%X{log_contexte_uuid}] - %msg%n</pattern>
      </encoder>
      
   </appender>
   
   
    <!-- 
   L'appender fichier http log pour les traces de niveau INFO, DEBUG et TRACE
   -->
   <appender name="http-file"
      class="ch.qos.logback.core.rolling.RollingFileAppender">
      
      <file>${LOGS_FOLDER}/${LOGS_FILENAME_PREFIXE}-http.log</file>
      
      <filter class="fr.urssaf.image.sae.webservices.util.LoggingFilter" />
          
      <rollingPolicy
         class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
         <fileNamePattern>${LOGS_FOLDER}/${LOGS_FILENAME_PREFIXE}-http.%i.log</fileNamePattern>
         <maxIndex>5</maxIndex>
      </rollingPolicy>
      
      <triggeringPolicy
         class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
         <maxFileSize>10MB</maxFileSize>
      </triggeringPolicy>
      
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger
            [%X{log_contexte_uuid}] - %msg%n</pattern>
      </encoder>
      
   </appender>
   
   
   
   <!-- 
   Exemples d'activation des traces DEBUG pour le SAE
   -->
   
   
   <!-- Pour tout le SAE, ou plus précisément pour le package de plus haut niveau -->
   <!--
   <logger name="fr.urssaf.image.sae" level="DEBUG" additivity="false">
      <appender-ref ref="log-file" />
      <appender-ref ref="debug-file" />
   </logger>
   -->
     
   <!-- Pour logger les appels des webservices et leur durée -->
   <logger name="fr.urssaf.image.sae.webservices.handler.LogHandler" level="INFO" additivity="false">
      <appender-ref ref="http-file" />
   </logger>  
   <logger name="fr.urssaf.image.sae.webservices.aspect.LogSkeletonAspect" level="INFO" additivity="false">
      <appender-ref ref="http-file" />
   </logger>  
   
   <!-- Pour sae-services -->
   <!--
   <logger name="fr.urssaf.image.sae.services" level="DEBUG" additivity="false">
      <appender-ref ref="log-file" />
      <appender-ref ref="debug-file" />
   </logger>
   -->
   
   
   <!-- Pour la couche storage -->
   <!--
   <logger name="fr.urssaf.image.sae.storage" level="DEBUG" additivity="false">
      <appender-ref ref="log-file" />
      <appender-ref ref="debug-file" />
   </logger>
   -->
      
   <!-- Pour sae-ecde -->
   <!--
   <logger name="fr.urssaf.image.sae.ecde" level="DEBUG" additivity="false">
      <appender-ref ref="log-file" />
      <appender-ref ref="debug-file" />
   </logger>
   -->
   
    <!-- additivity=false ensures analytics data only goes to the analytics log -->
    <logger name="certificates_validity" level="WARN" additivity="false">
        <appender-ref ref="validity-of-certificates"/>
    </logger>
    
   <!-- Niveau general pour l'application -->
   <root level="WARN">
      <appender-ref ref="log-file" />
      <appender-ref ref="debug-file" />
   </root>
   
   
</configuration>