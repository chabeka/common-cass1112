<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
      http://www.springframework.org/schema/beans 
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context 
      http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <context:component-scan base-package="fr.urssaf.image.sae.webservices" />

   <bean id="securityService"
      class="fr.urssaf.image.sae.webservices.security.SecurityService">

      <constructor-arg name="keystore">
         <value>security/Portail_Image.p12</value>
      </constructor-arg>
      <constructor-arg name="crls">
         <array>
            <value>security/CRL/Pseudo_ACOSS.crl</value>
            <value>security/CRL/Pseudo_Appli.crl</value>
            <value>security/CRL/Pseudo_IGC_A.crl</value>
         </array>
      </constructor-arg>
   </bean>

</beans>