<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
      http://www.springframework.org/schema/beans 
      http://www.springframework.org/schema/beans/spring-beans.xsd
      http://www.springframework.org/schema/context 
      http://www.springframework.org/schema/context/spring-context.xsd">
  
   <import resource="applicationContext-properties-test.xml" />

   <bean
      class="fr.urssaf.image.sae.webservices.dfceservice.test.DfceInfoServiceTU"
      id="dfceInfoService" />

   <bean
      class="fr.urssaf.image.sae.webservices.modele.WebServiceConfiguration"
      id="webServiceConfiguration">
      <constructor-arg value="${sae.webservice.ancien.service.actif}" />
   </bean>
      
   <import resource="applicationContext-sae-pile-travaux.xml" />
   <import resource="applicationContext-sae-trace.xml" />
   <import resource="applicationContext-sae-format.xml" />
   <import resource="applicationContext-service.xml" />
   
   <!-- mock pour consultation et recherche -->
   <bean id="saeServiceProvider"
      class="fr.urssaf.image.sae.webservices.service.SAEServiceProviderImpl">
   </bean>

   <bean factory-bean="SAEServiceFactory" factory-method="createSAEModificationService" />
   
   <bean factory-bean="SAEServiceFactory" factory-method="createSAESuppressionService" />

   <!-- mock pour capture unitaire -->
   <bean id="saeCaptureService" factory-bean="SAEServiceFactory"
      factory-method="createSAECaptureService" />
      
      <!-- mock pour copie -->
   <bean id="saeCopieService" factory-bean="SAEServiceFactory"
      factory-method="createSAECopieService" />
      
       <!-- mock pour documentExistant -->
   <bean id="saeDocumentExistantService" factory-bean="SAEServiceFactory"
      factory-method="createSAEDocumentExistantService" />

   <bean id="ecdeServices" factory-bean="SAEServiceFactory"
      factory-method="createEcdeServices" />

   <!-- mock pour le controle de la capture -->
   <bean id="saeControlesCaptureService" factory-bean="SAEServiceFactory"
      factory-method="createSAEControlesCaptureService" />

   <!-- mock pour le controle de la capture -->
   <bean id="saeControlesSupportService" factory-bean="SAEServiceFactory"
      factory-method="createSAEControlesSupportService" />

   <!-- mock pour le lancement des traitements de masse -->
   <bean id="traitementAsynchroneService" factory-bean="SAEServiceFactory"
      factory-method="createTraitementAsynchroneService" />
      
   <!-- mock pour le service de recuperation des metadonnées -->
   <bean id="metadataService" factory-bean="SAEServiceFactory"
      factory-method="createMetadataService" />
      
   <!-- mock pour le support pour les traces des controles -->
   <bean id="tracesControlesSupport" factory-bean="SAEServiceFactory"
      factory-method="createTracesControlesSupport" />
      
   <!-- mock pour le support pour les traces des controles -->
   <bean id="transfertService" factory-bean="SAEServiceFactory"
      factory-method="createSAETransfertService" />
      
   <!-- mock pour le support pour les indexes composites -->
   <bean id="indexCompositeService" factory-bean="SAEServiceFactory"
      factory-method="createIndexCompositeService" primary="true">
   </bean>

   <bean id="ecdeControleSupport"
      class="fr.urssaf.image.sae.services.batch.capturemasse.support.ecde.impl.EcdeControleSupportImpl" />

   <!-- Services necessaires à la consultation des etats des services  -->
   <context:component-scan
      base-package="fr.urssaf.image.sae.webservices.dfceservice.test" />
</beans>