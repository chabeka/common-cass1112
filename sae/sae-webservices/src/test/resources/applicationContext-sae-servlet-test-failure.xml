<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xmlns:jee="http://www.springframework.org/schema/jee"
   xsi:schemaLocation="
      http://www.springframework.org/schema/beans 
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context 
      http://www.springframework.org/schema/context/spring-context-3.0.xsd
      http://www.springframework.org/schema/jee 
      http://www.springframework.org/schema/jee/spring-jee-3.0.xsd">

   <import resource="applicationContext-properties-test.xml" />

   <context:component-scan base-package="fr.urssaf.image.sae.exploitation" />

   <!--Instantiation du bean de connexion Ã  la base DFCE -->
   <bean id="dfceConnection"
      class="fr.urssaf.image.commons.dfce.manager.DFCEConnectionFactory"
      factory-method="createDFCEConnectionByDFCEConfigurationResource">
      <constructor-arg>
         <bean class="org.springframework.core.io.ClassPathResource">
            <constructor-arg
               value="config/test-sae-dfce-config-failure.properties" />
         </bean>
      </constructor-arg>
   </bean>

</beans>