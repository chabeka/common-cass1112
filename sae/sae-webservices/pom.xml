<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <parent>
      <artifactId>sae-parent</artifactId>
      <groupId>fr.urssaf.image.sae</groupId>
      <version>0.0.1-SNAPSHOT</version>
   </parent>
   <modelVersion>4.0.0</modelVersion>
   <groupId>fr.urssaf.image.sae</groupId>
   <artifactId>sae-webservices</artifactId>
   <name>sae-webservices</name>
   <version>0.0.1-SNAPSHOT</version>

   <properties>
      <axis.version>1.5.4</axis.version>
      <axiom.version>1.2.9</axiom.version>
   </properties>

   <profiles>
      <profile>
         <id>generateSkeleton</id>

         <build>
            <plugins>
               <plugin>
                  <groupId>org.apache.axis2</groupId>
                  <artifactId>axis2-wsdl2code-maven-plugin</artifactId>
                  <version>${axis.version}</version>
                  <executions>
                     <execution>
                        <goals>
                           <goal>wsdl2code</goal>
                        </goals>
                        <configuration>
                           <packageName>fr.urssaf.image.sae.webservices.skeleton</packageName>
                           <wsdlFile>src/main/resources/SaeService.wsdl</wsdlFile>
                           <wsdlVersion>2.0</wsdlVersion>
                           <outputDirectory>src</outputDirectory>
                           <generateServicesXml>true</generateServicesXml>
                           <generateServerSide>true</generateServerSide>
                           <generateServerSideInterface>true</generateServerSideInterface>
                           <generateTestcase>true</generateTestcase>
                           <targetSourceFolderLocation>main/java</targetSourceFolderLocation>
                           <targetResourcesFolderLocation>main/resources/META-INF</targetResourcesFolderLocation>

                        </configuration>
                     </execution>
                  </executions>
               </plugin>


            </plugins>
         </build>

      </profile>

   </profiles>

   <dependencies>

      <!--  AXIS 2 -->

      <dependency>
         <groupId>org.apache.axis2</groupId>
         <artifactId>axis2</artifactId>
         <version>${axis.version}</version>
      </dependency>

      <!--  AXIOM  -->

      <dependency>
         <groupId>org.apache.ws.commons.axiom</groupId>
         <artifactId>axiom-api</artifactId>
         <version>${axiom.version}</version>
      </dependency>

      <dependency>
         <groupId>org.apache.ws.commons.axiom</groupId>
         <artifactId>axiom-impl</artifactId>
         <version>${axiom.version}</version>
      </dependency>

   </dependencies>
</project>