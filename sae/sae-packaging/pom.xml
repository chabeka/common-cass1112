<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <parent>
      <artifactId>sae-parent</artifactId>
      <groupId>fr.urssaf.image.sae</groupId>
      <version>0.0.1-SNAPSHOT</version>
   </parent>
   <modelVersion>4.0.0</modelVersion>
   <groupId>fr.urssaf.image.sae</groupId>
   <artifactId>sae-packaging</artifactId>
   <packaging>pom</packaging>
   <name>sae-packaging</name>
   <version>0.0.1-SNAPSHOT</version>
   <description>Packaging des web services du SAE</description>

   <modules>

      <module>../sae-parent</module>
      <module>../sae-vi</module>
      <module>../sae-saml</module>
      <module>../sae-igc</module>
      <module>../sae-bo</module>
      <module>../sae-metadata</module>
      <module>../sae-storage</module>
      <module>../sae-storage-dfce</module>
      <module>../sae-services</module>
      <module>../sae-webservices</module>

   </modules>

   <build>

      <plugins>

         <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <configuration>
               <finalName>sae-integration</finalName>
               <descriptors>
                  <descriptor>src/assembly/war-webservices.xml</descriptor>
               </descriptors>
            </configuration>
            <executions>
               <execution>
                  <id>make-assembly</id>
                  <phase>package</phase>
                  <goals>
                     <goal>single</goal>
                  </goals>
               </execution>
            </executions>

         </plugin>

         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-deploy-plugin</artifactId>
            <version>2.6</version>
            <configuration>
               <file>${project.build.directory}/sae-integration.war</file>
               <url>http://cer69-nexus.cer69.recouv:8081/nexus/content/repositories/snapshots</url>
               <groupId>fr.urssaf.image.sae</groupId>
               <artifactId>sae-integration</artifactId>
               <version>0.0.1-SNAPSHOT</version>
               <uniqueVersion>false</uniqueVersion>
            </configuration>
         </plugin>


      </plugins>

   </build>

   <properties>
      <dfce.serialization>0.9.3</dfce.serialization>
      <dfce.toolkit.client>0.9.3</dfce.toolkit.client>
      <dfce.toolkit.pojo>0.9.3</dfce.toolkit.pojo>
      <dfce.toolkit.service>0.9.3</dfce.toolkit.service>
   </properties>


   <dependencies>

      <dependency>
         <groupId>org.apache.axis2</groupId>
         <artifactId>axis2</artifactId>
         <version>${axis2.version}</version>
         <scope>runtime</scope>
      </dependency>

      <dependency>
         <groupId>org.apache.axis2</groupId>
         <artifactId>axis2-transport-local</artifactId>
         <version>${axis2.version}</version>
         <scope>runtime</scope>
      </dependency>

      <dependency>
         <groupId>org.apache.axis2</groupId>
         <artifactId>axis2-transport-http</artifactId>
         <version>${axis2.version}</version>
         <scope>runtime</scope>
      </dependency>

      <dependency>
         <groupId>com.docubase</groupId>
         <artifactId>dfce-toolkit-service</artifactId>
         <version>${dfce.toolkit.service}</version>
      </dependency>

      <dependency>
         <groupId>com.docubase</groupId>
         <artifactId>dfce-serialization</artifactId>
         <version>${dfce.serialization}</version>
      </dependency>

      <dependency>
         <groupId>com.docubase</groupId>
         <artifactId>dfce-toolkit-pojo</artifactId>
         <version>${dfce.toolkit.pojo}</version>
      </dependency>

   </dependencies>

</project>