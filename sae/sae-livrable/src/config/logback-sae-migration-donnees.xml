<configuration scan="true" scanPeriod="30 seconds">
   <!-- 
   
   Rappels des niveaux de trace : TRACE, DEBUG, INFO, WARN, ERROR, OFF
   
   Tableau de sortie des traces en fonction du niveau de trace demande
   dans l'appel du logger et du niveau de trace actif dans la config
   
   |________________________________________________________________________|
   | Niveau de trace      | Niveau de trace effectif dans la configuration  |
   | utilise dans l'appel |                                                 |
   | du logger            | TRACE | DEBUG | INFO  | WARN  | ERROR | OFF     |
   |________________________________________________________________________|
   | TRACE                |  Oui  |  Non  |  Non  |  Non  |  Non  |  Non    |
   |________________________________________________________________________|
   | DEBUG                |  Oui  |  Oui  |  Non  |  Non  |  Non  |  Non    |
   |________________________________________________________________________|
   | INFO                 |  Oui  |  Oui  |  Oui  |  Oui  |  Non  |  Non    |
   |________________________________________________________________________|
   | WARN                 |  Oui  |  Oui  |  Oui  |  Oui  |  Non  |  Non    |
   |________________________________________________________________________|
   | ERROR                |  Oui  |  Oui  |  Oui  |  Oui  |  Oui  |  Non    |
   |________________________________________________________________________|
   -->
   
   <property name="LOGS_FOLDER" value="@LOGS_PATH@" />
   <property name="LOGS_FILENAME_PREFIXE" value="sae_migration_donnees" />
   <timestamp key="byDay" datePattern="yyyyMMdd" />
   
   <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSk} %-5level %logger - %msg%n</pattern>
      </encoder>
   </appender>

   <appender name="log-file"
      class="ch.qos.logback.core.FileAppender">
      <file>${LOGS_FOLDER}/${LOGS_FILENAME_PREFIXE}.${byDay}.log</file>
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger - %msg%n</pattern>
      </encoder>
   </appender>
   
   <logger name="org.opensaml" level="WARN" />
   <logger name="org.apache.xml" level="WARN" />
   <logger name="org.springframework" level="WARN" />
   <logger name="org.apache.zookeeper" level="WARN" />
   <logger name="com.netflix.curator" level="WARN" />
   <logger name="org.cassandraunit" level="WARN" />
   <logger name="org.apache.cassandra" level="WARN" />
   <logger name="me.prettyprint.cassandra" level="WARN" />
   
   <logger name="fr.urssaf.image.commons.cassandra" level="WARN" />
   <logger name="fr.urssaf.image.commons.zookeeper" level="WARN" />
   
   <logger name="fr.urssaf.image.sae.trace" level="WARN" />
   <logger name="fr.urssaf.image.sae.commons" level="WARN" />
   
   <!-- Niveau general pour l'application -->
   <root level="DEBUG">
      <appender-ref ref="console" />
      <appender-ref ref="log-file" />
   </root>
   
</configuration>