	<properties>
		<dfce.serialization>0.9.3</dfce.serialization>
		<dfce.toolkit.client>0.9.3</dfce.toolkit.client>
		<dfce.toolkit.pojo>0.9.3</dfce.toolkit.pojo>
		<dfce.toolkit.service>0.9.3</dfce.toolkit.service>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<excludes>
						<!--Ces tests sont exclus car pour l'instant ils servent à créer et 
							supprimer la base SAE -->
						<exclude>**/CreationBaseDFCETest.java</exclude>
						<exclude>**/DeletionBaseDFCETest.java</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<inherited>true</inherited>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>aspectj-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
