	<name>sae-storage-admin</name>
	<description>Fournit des services pour administrer la base SAE </description>
	<developers>
		<developer>
			<name>Ahmed Kenore </name>
			<organization>Atos</organization>
		</developer>
		<developer>
			<name>Hicham Rhofir </name>
