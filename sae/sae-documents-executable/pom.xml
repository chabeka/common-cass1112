<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<artifactId>sae</artifactId>
		<groupId>fr.urssaf.image.sae</groupId>
		<version>19.2.0-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>fr.urssaf.image.sae</groupId>
	<artifactId>sae-documents-executable</artifactId>
	<name>sae-documents-executable</name>
	<version>19.2.0-SNAPSHOT</version>
	<description>Module gérant les différents traitements concernant les documents</description>

	<dependencies>

      <!-- commons-dfce -->
		<dependency>
			<groupId>fr.urssaf.image.commons</groupId>
			<artifactId>commons-dfce</artifactId>
			<version>${commons.dfce}</version>
			<exclusions>
				<exclusion>
					<groupId>org.aspectj</groupId>
					<artifactId>aspectjrt</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.aspectj</groupId>
					<artifactId>aspectjweaver</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

      <!-- SAE -->
		<dependency>
			<groupId>fr.urssaf.image.sae</groupId>
			<artifactId>sae-format</artifactId>
			<version>19.2.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>fr.urssaf.image.sae</groupId>
			<artifactId>sae-commons</artifactId>
			<version>19.2.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>fr.urssaf.image.sae</groupId>
			<artifactId>sae-trace</artifactId>
			<version>19.2.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>fr.urssaf.image.sae</groupId>
			<artifactId>sae-vi</artifactId>
			<version>19.2.0-SNAPSHOT</version>
		</dependency>

      <!-- AspectJ -->
		<dependency>
			<groupId>org.aspectj</groupId>
			<artifactId>aspectjrt</artifactId>
			<version>${aspectj.version}</version>
		</dependency>
		<dependency>
			<groupId>org.aspectj</groupId>
			<artifactId>aspectjweaver</artifactId>
			<version>${aspectj.version}</version>
		</dependency>

      <!-- EasyMock -->
		<dependency>
			<groupId>org.easymock</groupId>
			<artifactId>easymock</artifactId>
			<version>${easymock.version}</version>
			<scope>test</scope>
		</dependency>

      <!-- Apache Commons -->
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>${apache.commons-collections.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-beanutils</groupId>
			<artifactId>commons-beanutils</artifactId>
			<version>${apache.commons-beanutils.version}</version>
		</dependency>

	</dependencies>

	<build>
		<finalName>${project.name}</finalName>
		<plugins>

         <!-- Compilation Aspect -->
			<plugin>
				<inherited>true</inherited>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>aspectj-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<argumentFileName>builddef-sae-documents-executable.lst</argumentFileName>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>${maven-shade-plugin.version}</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<excludes>
									<exclude>commons-logging:commons-logging:jar:</exclude>
									<exclude>log4j:log4j:jar:</exclude>
								</excludes>
							</artifactSet>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>META-INF/*.SF</exclude>
										<exclude>META-INF/*.DSA</exclude>
										<exclude>META-INF/*.RSA</exclude>
									</excludes>
								</filter>
                        <!-- Toutes les classes de org.aspectj:aspectjrt 
                           sont reprises dans le jar org.aspectj:aspectjweaver Néanmoins, il faut inclure 
                           les 2 jar dans les dépendances. L'exclusion des classes se fait donc au niveau 
                           de Shade. -->
								<filter>
									<artifact>org.aspectj:aspectjrt</artifact>
									<excludes>
										<exclude>org/aspectj/**</exclude>
									</excludes>
								</filter>
                        <!-- Exclusion de 4 classes qui ont été copiées/collées 
                           de commons-collection vers commons-beanutils https://issues.apache.org/jira/browse/BEANUTILS-278 -->
								<filter>
									<artifact>commons-beanutils:commons-beanutils</artifact>
									<excludes>
										<exclude>org/apache/commons/collections/ArrayStack.class</exclude>
										<exclude>org/apache/commons/collections/Buffer.class</exclude>
										<exclude>org/apache/commons/collections/BufferUnderflowException.class</exclude>
										<exclude>org/apache/commons/collections/FastHashMap*.class</exclude>
									</excludes>
								</filter>
							</filters>
							<transformers>
								<transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<mainClass>fr.urssaf.image.sae.documents.executable.bootstrap.DocumentsExecutableMain</mainClass>
								</transformer>
								<transformer implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/spring.handlers</resource>
								</transformer>
								<transformer implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/spring.schemas</resource>
								</transformer>
							</transformers>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>fr.acoss.industrialisation.maven</groupId>
				<artifactId>hawai-maven-plugin</artifactId>
				<configuration>
					<applicationName>${project.name}</applicationName>
					<applicationBinFileName>${project.build.finalName}.jar</applicationBinFileName>
					<fedex>false</fedex>
					<skip>false</skip>
				</configuration>
			</plugin>

		</plugins>

	</build>

</project>