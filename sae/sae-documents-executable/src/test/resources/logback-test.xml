<configuration>

   <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSk} %-5level %logger - %msg%n</pattern>
      </encoder>
   </appender>
   
   <logger name="org.springframework" level="WARN" />
   <logger name="org.apache.cassandra" level="WARN" />
   <logger name="org.apache.zookeeper" level="WARN" />
   <logger name="me.prettyprint.cassandra" level="WARN" />
   <logger name="com.netflix.curator" level="WARN" />
   <logger name="org.cassandraunit" level="WARN" />
   <logger name="uk.gov.nationalarchives.droid" level="WARN" />
   <logger name="org.apache.pdfbox" level="WARN" />
   
   <logger name="fr.urssaf.image.commons.cassandra" level="WARN" />
   <logger name="fr.urssaf.image.commons.zookeeper" level="WARN" />
   <logger name="fr.urssaf.image.commons.pdfbox" level="WARN" />
   <logger name="fr.urssaf.image.commons.droid" level="WARN" />
   
   <logger name="fr.urssaf.image.sae.documents.executable" level="WARN" />
   <logger name="fr.urssaf.image.sae.format" level="WARN" />
   
   
   <root level="debug">
      <appender-ref ref="console" />
   </root>

</configuration>