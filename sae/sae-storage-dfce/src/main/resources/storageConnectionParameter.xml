<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!--Instantiation du bean de connexion Ã  la base DFCE -->
	<bean id="storageBase"
		class="fr.urssaf.image.sae.storage.model.connection.StorageBase">
		<property name="baseName" value="BaseID" />
	</bean>
	<bean id="storageHost"
		class="fr.urssaf.image.sae.storage.model.connection.StorageHost">
		<property name="hostName" value="cer69-ds4int" />
		<property name="hostPort" value="8080" />
		<property name="contextRoot" value="/dfce-webapp/toolkit/" />
		<property name="secure" value="false" />
	</bean>
	<bean id="storageUser"
		class="fr.urssaf.image.sae.storage.model.connection.StorageUser">
		<property name="login" value="SIMPLE_USER_NAME" />
		<property name="password" value="SIMPLE_USER_PASSWORD" />
	</bean>
	<bean id="storageConnectionParameter"
		class="fr.urssaf.image.sae.storage.model.connection.StorageConnectionParameter">
		<property name="storageBase" ref="storageBase" />
		<property name="storageHost" ref="storageHost" />
		<property name="storageUser" ref="storageUser" />
	</bean>
</beans>