<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
        http://www.springframework.org/schema/beans	
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <context:component-scan base-package="fr.urssaf.image.sae.trace" />
   
   <!-- Fichiers nécessaires pour la compatibilité des formats des fichiers -->
   <bean id="trace" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" >
    
       <!-- ignoreUnresolvablePlaceholders mis à true, afin de pouvoir utiliser d'autres PropertyPlaceholderConfigurer
            cf https://stackoverflow.com/questions/686635/is-it-possible-to-have-multiple-propertyplaceholderconfigurer-in-my-applicationc  -->
       <property name="ignoreUnresolvablePlaceholders" value="true"/>
       <property name="locations">
          <list>
             <value>classpath*:/identification/pdfaCompatibleFormat.properties</value>
          </list>
       </property>
   </bean>
   
</beans>