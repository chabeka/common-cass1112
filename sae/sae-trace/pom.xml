	<name>sae-trace</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<plugins>

         <!-- Compilation Aspect -->
			<plugin>
				<inherited>true</inherited>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>aspectj-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
				 	<XnoInline>true</XnoInline>
					<argumentFileName>builddef-sae-trace.lst</argumentFileName>
				</configuration>
			</plugin>
		</plugins>
	</build>

