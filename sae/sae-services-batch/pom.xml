   <description>Art√©fact contenant les services de traitement de masse</description>

   <properties>
      <sonar.exclusions>fr/urssaf/image/sae/services/batch/capturemasse/modele/commun_sommaire_et_resultat/*.java,fr/urssaf/image/sae/services/batch/capturemasse/modele/resultats/*.java,fr/urssaf/image/sae/services/batch/capturemasse/modele/sommaire/*.java</sonar.exclusions>
   </properties>

   <profiles>
      <profile>
         <id>genererCodeModeleSommaireEtResultat</id>
         <build>
            <plugins>
               <plugin>
                  <groupId>com.sun.tools.xjc.maven2</groupId>
                  <artifactId>maven-jaxb-plugin</artifactId>
                  <executions>
                     <execution>
                        <goals>
                           <goal>generate</goal>
                        </goals>
                     </execution>
                  </executions>
                  <configuration>
                     <schemaDirectory>${basedir}/src/main/resources/xsd_som_res</schemaDirectory>
                     <generateDirectory>${basedir}/src/main/java</generateDirectory>
                     <includeSchemas>
                        <includeSchema>commun_sommaire_et_resultat.xsd</includeSchema>
                        <includeSchema>sommaire.xsd</includeSchema>
                        <includeSchema>resultats.xsd</includeSchema>
                        <includeSchema>document.xsd</includeSchema>
                     </includeSchemas>
                  </configuration>
               </plugin>

               <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-antrun-plugin</artifactId>
                  <version>${maven-antrun-plugin.version}</version>
                  <executions>
                     <execution>
                        <phase>generate-sources</phase>
                        <configuration>
                           <target name="suppressWarnings('PMD')">
                              <replace dir="${basedir}/src/main/java" includes="fr/urssaf/image/sae/services/capturemasse/modele/*/*.java" token="public class" value="@SuppressWarnings(&quot;PMD&quot;)&#xA;public class" />
                           </target>
                        </configuration>
                        <goals>
                           <goal>run</goal>
                        </goals>
                     </execution>
                  </executions>
               </plugin>

            </plugins>
         </build>
      </profile>
   </profiles>

   <build>
      <plugins>

         <!-- Compilation Aspect -->
         <plugin>
            <inherited>true</inherited>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>aspectj-maven-plugin</artifactId>
            <configuration>
               <argumentFileName>builddef-sae-services-capturemasse.lst</argumentFileName>
            </configuration>
         </plugin>
      </plugins>
   </build>


