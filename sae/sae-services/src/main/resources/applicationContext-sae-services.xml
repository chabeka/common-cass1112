<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
      http://www.springframework.org/schema/beans  
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context 
      http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <context:component-scan base-package="fr.urssaf.image.sae.services" />

   <import resource="applicationContext-sae-storage-dfce.xml" />

   <!--Gestion de message à partir d'un fichier -->
   <bean id="messageSource_sae_services"
      class="org.springframework.context.support.ResourceBundleMessageSource">
      <property name="basename" value="i18n.sae_services_messages" />
   </bean>
   
   <!-- Paramétrage connexion trannsfert GNS -->
   <import resource="applicationContext-sae-services-transfert.xml" />
   
   <import resource="applicationContext-sae-mapping.xml" />
   <import resource="applicationContext-sae-ecde.xml" />

   <import resource="applicationContext-sae-droit.xml" />
   <import resource="applicationContext-sae-services-security.xml" />

   <import resource="applicationContext-sae-trace.xml" />
   <import resource="applicationContext-sae-rnd.xml" />
   
   <import resource="applicationContext-sae-format.xml" />

</beans>