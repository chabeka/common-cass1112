<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <import resource="applicationContext-sae-capture-masse.xml" />

   <import resource="jobs/job-capture-masse-test.xml" />

   <!--
      les tests unitaires se font sans persistance dans cassandra spring
      batch
   -->
   <bean id="jobRepository"
      class="org.springframework.batch.core.repository.support.MapJobRepositoryFactoryBean" />


   <!--
      le scan devra être modifié une fois que les classes dépréciées
      seront supprimées
   -->
   <context:component-scan base-package="fr.urssaf.image.sae.services.batch">
      <context:exclude-filter type="regex"
         expression="fr.urssaf.image.sae.services.batch.BulkCaptureJob" />
      <context:exclude-filter type="regex"
         expression="fr.urssaf.image.sae.services.batch.BulkCaptureHelper" />
   </context:component-scan>

   <bean
      class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
      <property name="locations">
         <value>classpath:config/commons-cassandra.properties</value>
      </property>
   </bean>



</beans>
