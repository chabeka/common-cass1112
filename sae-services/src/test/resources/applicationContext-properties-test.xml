<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <!--
      Chargement des fichiers de configuration du SAE :
      src/test/resources/config/test-sae-config.properties
      src/test/resources/config/test-sae-dfce-config.properties
      src/test/resources/config/test-sae-dfce-transfert-config.properties
      src/test/resources/config/test-sae-cassandra-config.properties
   -->

   <bean id="resourceSaeConfig" class="org.springframework.core.io.ClassPathResource">
      <constructor-arg value="config/test-sae-config.properties" />
   </bean>

   <bean class="java.io.File" id="fileSaeConfig">
      <constructor-arg>
         <bean factory-bean="resourceSaeConfig" factory-method="getURI" />
      </constructor-arg>
   </bean>

   <bean id="saeConfigResource" class="org.springframework.core.io.FileSystemResource">
      <constructor-arg>
         <bean factory-bean="fileSaeConfig" factory-method="getAbsolutePath" />
      </constructor-arg>
   </bean>

   <bean class="fr.urssaf.image.sae.commons.factory.PropertiesFactory"
      factory-method="load">
      <constructor-arg ref="saeConfigResource" />
   </bean>

   <bean id="dfceConnectionTransfert" autowire-candidate="false"
      class="fr.urssaf.image.commons.dfce.manager.DFCEConnectionFactory"
      factory-method="createDFCEConnectionByDFCEConfiguration">
      <constructor-arg type="java.io.File" value="${sae.dfce.transfert.cheminFichierConfig}" />
   </bean>   
   
   <bean id="saeServiceTestProviderTransfert"
      class="fr.urssaf.image.sae.services.SAEServiceTestProviderTransfert"
      factory-method="createSAEServiceTestProviderTransfert">
      <constructor-arg ref="dfceConnectionTransfert" />
   </bean>

   <bean id="dfceConnectionService"
      class="fr.urssaf.image.commons.dfce.service.impl.DFCEConnectionServiceImpl" >
      <constructor-arg ref="dfceConnection" />
   </bean><!--
   
   <bean id="storageTransfertService" class="fr.urssaf.image.sae.utils.MockFactoryBean"
      factory-method="createStorageTransfertService" primary="true" />
--></beans>