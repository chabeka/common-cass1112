<configuration>

   <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>%d{HH:mm:ss.SSS} [%-5level] %thread %logger%n%msg%n%n</pattern>
      </encoder>
   </appender>

   <root level="WARN">
      <appender-ref ref="STDOUT" />
   </root>

</configuration>