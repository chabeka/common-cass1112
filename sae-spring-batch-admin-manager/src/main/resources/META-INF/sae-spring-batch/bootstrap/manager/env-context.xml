<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!--  Use this to set additional properties on beans at run time -->
	<bean id="placeholderProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:/org/springframework/batch/admin/bootstrap/batch.properties</value>
			</list>
		</property>
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		<property name="ignoreResourceNotFound" value="true" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
		<property name="order" value="10" />
	</bean>
   
   <bean id="propertiesFactory"
         class="org.springframework.batch.admin.factory.PropertiesFactory" />
   
   <bean id="placeholderPropertiesJobConfigFileDir" 
         factory-bean="propertiesFactory" 
         factory-method="load" />

   <!-- Chargement des propriétés pour serveurs cassandra et zookeeper locaux -->
   <bean id="cassandraPlaceholderProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
      <property name="locations">
         <list>
            <value>classpath:/cassandra-local.properties</value>
         </list>
      </property>
      <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
      <property name="ignoreResourceNotFound" value="true" />
      <property name="ignoreUnresolvablePlaceholders" value="true" />
      <property name="order" value="10" />
   </bean>

</beans>