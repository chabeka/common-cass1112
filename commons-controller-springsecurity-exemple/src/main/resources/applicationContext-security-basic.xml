<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
   xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/security
         http://www.springframework.org/schema/security/spring-security-3.0.4.xsd">

   <http use-expressions="true" access-decision-manager-ref="pageAuthorizeManager">
      <intercept-url pattern="/css/**" access="permitAll" />
      <intercept-url pattern="/login_basic.do" access="permitAll" />
      <intercept-url pattern="/" access="permitAll" />
      <intercept-url pattern="/welcome.do" access="permitAll" />
      <intercept-url pattern="/accessDenied.do" access="permitAll" />
      <intercept-url pattern="/**" access="isAuthenticated()" />
      <form-login login-page="/login_basic.do" />
      <logout logout-success-url="/login_basic.do" logout-url="/logout" />
      <access-denied-handler error-page="/accessDenied.do" />
      <session-management>
         <concurrency-control max-sessions="1" />
      </session-management>
   </http>

   <beans:bean id="authorizeBeanPostProcessor"
      class="fr.urssaf.image.commons.controller.springsecurity.exemple.access.AuthorizeBeanPostProcessor">
      <beans:property name="roleHierarchy" ref="roleHierarchy" />
   </beans:bean>

   <authentication-manager>
      <authentication-provider user-service-ref="securityBasicService">
         <password-encoder hash="md5" />
      </authentication-provider>
   </authentication-manager>

   <beans:bean id="pageAuthorizeManager"
      class="org.springframework.security.access.vote.UnanimousBased">
      <beans:property name="decisionVoters">
         <beans:list>
            <beans:bean
               class="fr.urssaf.image.commons.controller.springsecurity.exemple.access.WebExpressionAccess">
               <beans:property name="roleHierarchy" ref="roleHierarchy" />
            </beans:bean>
            <beans:bean
               class="fr.urssaf.image.commons.controller.springsecurity.exemple.access.PageAuthorizedAccess">
               <beans:constructor-arg ref="authorizationService" />
               <beans:property name="roleHierarchy" ref="roleHierarchy" />
            </beans:bean>
         </beans:list>
      </beans:property>
   </beans:bean>


   <beans:bean id="methodAuthorizeManager"
      class="org.springframework.security.access.vote.AffirmativeBased">
      <beans:property name="decisionVoters">
         <beans:list>
            <beans:bean
               class="org.springframework.security.access.vote.RoleHierarchyVoter">
               <beans:constructor-arg ref="roleHierarchy" />
            </beans:bean>
         </beans:list>
      </beans:property>
   </beans:bean>

   <beans:bean id="roleHierarchy"
      class="org.springframework.security.access.hierarchicalroles.RoleHierarchyImpl">
      <beans:property name="hierarchy">
         <beans:value>
            ROLE_ADMIN > ROLE_USER
            ROLE_ADMIN > ROLE_USER2
            ROLE_USER > ROLE_AUTH
         </beans:value>
      </beans:property>
   </beans:bean>





</beans:beans>
