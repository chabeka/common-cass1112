<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">


   <!-- Sous-ensemble du fichier principal de l'artéfact. Ce fichier contient 
      la définition des beans pour Spring Batch sur Cassandra. Ce fichier est externalisé 
      par rapport au fichier principal car ces beans peuvent être surchargés pour 
      les TU. -->

   <!-- Définition des beans pour Spring Batch -->

   <bean id="jobRepository"
      class="org.springframework.batch.core.repository.support.SimpleJobRepository">
      <constructor-arg ref="cassandraJobInstanceDao" />
      <constructor-arg ref="cassandraJobExecutionDao" />
      <constructor-arg ref="cassandraStepExecutionDao" />
      <constructor-arg ref="cassandraExecutionContextDao" />
   </bean>
   
   <bean id="jobExplorer" class="org.springframework.batch.core.explore.support.SimpleJobExplorer">
     <constructor-arg ref="cassandraJobInstanceDao" />
      <constructor-arg ref="cassandraJobExecutionDao" />
      <constructor-arg ref="cassandraStepExecutionDao" />
      <constructor-arg ref="cassandraExecutionContextDao" />
   </bean>

   <bean id="jobLauncher"
      class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
      <property name="jobRepository" ref="jobRepository" />
   </bean>
   
   <!-- Configuration de l'interruption du traitement -->
   <bean id="traitementMasseConfig"
      class="fr.urssaf.image.sae.services.batch.capturemasse.support.stockage.interruption.model.InterruptionTraitementConfig">
      <qualifier value="interruption_traitement_masse" />
      <property name="start" value="${sae.traitementmasse.interruption.heure}" />
      <property name="delay" value="${sae.traitementmasse.interruption.delai}" />
      <property name="tentatives"
         value="${sae.traitementmasse.interruption.tentatives}" />
   </bean>
   
</beans>
