<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!--
      On ne travaille pas en mode transactionnel, mais un
      transactionManager est obligatoire
   -->
   <bean
      class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
      <property name="locations">
         <value>classpath:cassandra-local.properties</value>
      </property>
   </bean>

   <!-- Déclaration des DAO utilisées par spring-batch -->
   <bean id="jobExecutionIdGenerator"
      class="fr.urssaf.image.commons.cassandra.spring.batch.idgenerator.JobExecutionIdGenerator">
      <constructor-arg ref="keyspace" />
      <constructor-arg ref="zkClient" />
      <constructor-arg ref="jobClockSupport"/>
   </bean>
	
   <!--  thrift BEANS -->
   <bean id="cassandraJobExecutionDaoThrift"
      class="fr.urssaf.image.commons.cassandra.spring.batch.daothrift.CassandraJobExecutionDaoThrift">
      <constructor-arg ref="keyspace" />
      <constructor-arg ref="jobExecutionIdGenerator" />
   </bean>
   
	<!--  CQL BEANS -->
	<context:component-scan base-package="fr.urssaf.image.commons.cassandra.spring" />
   	
   <!-- Importation de la définition du keyspace et de zkClient -->
   <import resource="classpath*:/applicationContext-commons-cassandra.xml" />

</beans>