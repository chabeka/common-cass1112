<?xml version="1.0" encoding="UTF-8"?>
<configuration>

   <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>%d{yyyy-MM-dd HH:mm:ss.SSSk} %-5level %logger - %msg%n</pattern>
      </encoder>
   </appender>

   <logger name="org.cassandraunit" level="INFO" />
   <logger name="org.apache.cassandra" level="OFF" />
   <logger name="me.prettyprint.cassandra" level="OFF" />
   <logger name="org.springframework.core.io" level="WARN" />
   <logger name="org.springframework.beans.factory" level="INFO" />
   <!-- <logger name="org.apache.curator" level="OFF" />  -->

    
   <root level="DEBUG">
      <appender-ref ref="console" />
   </root>
  
</configuration>
