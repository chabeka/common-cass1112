<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>application exemple</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>

	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.properties</param-value>
	</context-param>

	<!-- la servlet -->
	<servlet>
		<servlet-name>Spring MVC Dispatcher Servlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:applicationContext.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- le mapping des url -->
	<servlet-mapping>
		<servlet-name>Spring MVC Dispatcher Servlet</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<!-- index -->
	<welcome-file-list>
		<welcome-file>/view/index.jsp</welcome-file>
	</welcome-file-list>

	<!-- encodage -->
	<filter>
		<filter-name>characterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>characterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- error page -->

	<error-page> <!-- Mauvaise requête -->
		<error-code>400</error-code>
		<location>/exception.do</location>
	</error-page>
	<error-page> <!-- Autorisation refusée -->
		<error-code>401</error-code>
		<location>/exception.do</location>
	</error-page>
	<error-page> <!-- Répertoire interdit -->
		<error-code>403</error-code>
		<location>/exception.do</location>
	</error-page>
	<error-page> <!-- Fichier non trouvé -->
		<error-code>404</error-code>
		<location>/exception.do</location>
	</error-page>
	<error-page> <!-- Erreur serveur -->
		<error-code>500</error-code>
		<location>/exception.do</location>
	</error-page>
	<error-page> <!-- Non implémenté -->
		<error-code>501</error-code>
		<location>/exception.do</location>
	</error-page>
	<error-page> <!-- Service indisponible -->
		<error-code>503</error-code>
		<location>/exception.do</location>
	</error-page>

	<!--
		error-page> <exception-type>java.lang.Exception</exception-type>
		<location>/view/exception.jsp</location> </error-page
	-->

	<!-- sitemesh -->
	<filter>
		<filter-name>sitemesh</filter-name>
		<filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>sitemesh</filter-name>
		<url-pattern>*.do</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>ERROR</dispatcher>
	</filter-mapping>
	
	<!-- durée de vie de la session -->
	<session-config>
      <session-timeout>30</session-timeout> 
    </session-config>
	

</web-app>
