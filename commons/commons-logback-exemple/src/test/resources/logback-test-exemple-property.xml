<?xml version="1.0" encoding="UTF-8"?>
<configuration>
   
   <property
      name="PATTERN"
      value="%d{yyyy-MM-dd HH:mm:ss.SSSk} %-5level %logger - %msg%n" />
   
   
   <appender
      name="console"
      class="ch.qos.logback.core.ConsoleAppender">
      
      <encoder>
         <pattern>${PATTERN}</pattern>
      </encoder>
      
   </appender>


   <appender
      name="fichier"
      class="ch.qos.logback.core.rolling.RollingFileAppender">
      
      <file>c:/logs/monAppli.log</file>
      
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
         <fileNamePattern>c:/logs/monAppli_%d{yyyyMMdd}.log</fileNamePattern>
         <maxHistory>15</maxHistory>
      </rollingPolicy>
      
      <encoder>
         <pattern>${PATTERN}</pattern>
      </encoder>
      
   </appender>
   
   
   <root level="DEBUG">
      <appender-ref ref="console" />
      <appender-ref ref="fichier" />
   </root>
   
   
</configuration>