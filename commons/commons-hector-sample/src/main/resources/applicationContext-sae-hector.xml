<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <context:component-scan
      base-package="fr.urssaf, fr.urssaf.image.sae.cassandra.dao.reservation.impl" />
   <context:property-placeholder location="classpath:application.properties" />
   <!--Gestion de message Ã  partir d'un fichier -->
   <bean id="messageSource"
      class="org.springframework.context.support.ResourceBundleMessageSource">
      <property name="basename" value="i18n.sae_hector_messages_fr_FR" />
   </bean>

   <bean id="saeHector" class="fr.urssaf.image.cassandra.impl.SAEHectorImpl">
   </bean>

   <bean id="jobDAO" class="fr.urssaf.image.sae.cassandra.dao.impl.JobDAOImpl">
      <property name="columnFamilyName" value="SaeJobs" />
      <property name="clefColumnFamilyName" value="Jobs_sae" />
   </bean>

</beans>