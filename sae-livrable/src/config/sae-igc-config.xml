<?xml version="1.0" encoding="UTF-8"?>
<IgcConfigs>
   
   <!--
   Un noeud IgcConfig par PKI trustee
   -->
   <!-- PKI de validation AED -->
   <IgcConfig>
      
      <!--
         Un identifiant unique pour differencier les PKI de ce fichier.
         Cet identifiant doit pouvoir être utilise comme nom de repertoire
      -->
      <id>PKI_VAL_AED</id>
      
      <!-- 
         Le chemin du fichier qui represente le certificat de l'AC racine de la PKI
      -->
      <certifACRacine>@@SAE_HOME@@/certificats/PKI_VAL_AED/ACRacine/pseudo_IGCA.crt</certifACRacine>
      
      
      <!-- 
        Repertoire contenant les CRL de toutes les AC de la PKI.
        Les CRL y sont stockes sous forme de fichiers .crl
      -->
      <repertoireCRL>@@SAE_HOME@@/certificats/PKI_VAL_AED/CRL/</repertoireCRL>
      
      
      <!-- 
        URL(s) de telechargement des CRL.
        Ces URL doivent se terminer par un pattern indiquant les fichiers a telecharger.
        
        Exemple d'URL :
          http://serveur/*.crl
          http://serveur/repertoire/*.crl
      -->
      <URLTelechargementCRL>
        <url>http://cer69idxpkival1.cer69.recouv/*.crl</url>
      </URLTelechargementCRL>
      
      <!--
         Les DN des AC de la PKI autorisees à deliver des certificats applicatifs.
         Ce sont donc les DN possibles pour l'issuer du certificat de signature
         utilise pour signer le VI.
      -->
     <issuers>
       <issuer>CN=AC Applications</issuer>
     </issuers>
        
   </IgcConfig>
   
   
   <!-- PKI nationale -->
   <IgcConfig>
      
      <id>PKI_NAT</id>
      
      <certifACRacine>@@SAE_HOME@@/certificats/PKI_NAT/ACRacine/AC_RACINE_IGCN_RECOUV_2012.crt</certifACRacine>
      
      <repertoireCRL>@@SAE_HOME@@/certificats/PKI_NAT/CRL/</repertoireCRL>
      
      <URLTelechargementCRL>
         <url>http://pkipubcrl.cnp.recouv/*.crl</url>
      </URLTelechargementCRL>

      <issuers>
         <issuer>CN=AC_APPLI_IGCN_RECOUV_2012</issuer>
      </issuers>
        
   </IgcConfig>
   
</IgcConfigs>
