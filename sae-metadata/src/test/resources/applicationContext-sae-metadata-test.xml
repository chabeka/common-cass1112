<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
     	http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <bean
      class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
      <property name="locations">
         <list>
            <value>config/sae-config.properties</value>
            <value>config/cassandra-local.properties</value>
            <value>config/commons-config.properties</value>
         </list>
      </property>
   </bean>

   <bean id="resourceSaeConfig" class="org.springframework.core.io.ClassPathResource">
      <constructor-arg value="config/commons-config.properties" />
   </bean>
   <bean id="dfceConfigFile" class="org.springframework.core.io.ClassPathResource">
      <constructor-arg value="config/commons-dfce.properties" />
   </bean>

   <bean class="java.io.File" id="fileSaeConfig">
      <constructor-arg>
         <bean factory-bean="resourceSaeConfig" factory-method="getURI" />
      </constructor-arg>
   </bean>

   <bean id="saeConfigResource" class="org.springframework.core.io.FileSystemResource">
      <constructor-arg>
         <bean factory-bean="fileSaeConfig" factory-method="getAbsolutePath" />
      </constructor-arg>
   </bean>


   <bean id="dfceConfig" factory-bean="dfceConfigFactory"
      factory-method="createDfceConfig">

      <!--
         NB : le bean saeConfigResource est injecté manuellement dans la
         méthode Main.main
      -->
      <constructor-arg ref="saeConfigResource" />

   </bean>

   <bean id="dfceConnection"
      class="fr.urssaf.image.commons.dfce.manager.DFCEConnectionFactory"
      factory-method="createDFCEConnectionByDFCEConfiguration">
      <constructor-arg value="${sae.dfce.cheminFichierConfig}" />
   </bean>

   <bean id="dfceConnectionService"
      class="fr.urssaf.image.commons.dfce.service.impl.DFCEConnectionServiceImpl">
      <constructor-arg ref="dfceConnection" />
   </bean>

   <import resource="classpath*:/applicationContext-sae-metadata.xml" />
   <import resource="classpath*:/applicationContext-commons-cassandra.xml" />

</beans>