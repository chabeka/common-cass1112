<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

   <modelVersion>4.0.0</modelVersion>

   <parent>
      <groupId>fr.urssaf.image.sae</groupId>
      <artifactId>sae</artifactId>
      <version>15.12.0.3</version>
   </parent>

   <groupId>fr.urssaf.image.sae</groupId>
   <artifactId>sae-storage-dfce</artifactId>
   <version>15.12.0.3</version>

   <name>sae-storage-dfce</name>

   <description>Archive contenant les implementations des interfaces des
      services de l'artefact sae-storage </description>

   <properties>
      <jackson.version>2.4.5</jackson.version>
   </properties>

   <!-- Ajout des dependances -->
   <dependencies>

      <!-- SAE -->

      <dependency>
         <groupId>fr.urssaf.image.sae</groupId>
         <artifactId>sae-storage</artifactId>
         <version>15.12.0.3</version>
      </dependency>

      <dependency>
         <groupId>fr.urssaf.image.sae</groupId>
         <artifactId>sae-trace</artifactId>
         <version>15.12.0.3</version>
      </dependency>

      <dependency>
         <groupId>fr.urssaf.image.sae</groupId>
         <artifactId>sae-vi</artifactId>
         <version>15.12.0.3</version>
      </dependency>

      <dependency>
         <groupId>fr.urssaf.image.sae</groupId>
         <artifactId>sae-metadata</artifactId>
         <version>15.12.0.3</version>
      </dependency>

      <dependency>
         <groupId>fr.urssaf.image.sae</groupId>
         <artifactId>sae-mapping</artifactId>
         <version>15.12.0.3</version>
      </dependency>

      <!-- XSTREAM -->

      <dependency>
         <groupId>com.thoughtworks.xstream</groupId>
         <artifactId>xstream</artifactId>
         <version>${xstream.version}</version>
         <scope>test</scope>
      </dependency>

      <!-- ASPECTJ -->

      <dependency>
         <groupId>org.aspectj</groupId>
         <artifactId>aspectjrt</artifactId>
         <version>${aspectj.version}</version>
      </dependency>

      <!-- SPRING -->

      <dependency>
         <groupId>org.springframework</groupId>
         <artifactId>spring-core</artifactId>
         <version>${spring.framework.version}</version>
      </dependency>

      <dependency>
         <groupId>org.springframework</groupId>
         <artifactId>spring-context</artifactId>
         <version>${spring.framework.version}</version>
      </dependency>

      <dependency>
         <groupId>org.springframework</groupId>
         <artifactId>spring-beans</artifactId>
         <version>${spring.framework.version}</version>
      </dependency>

      <dependency>
         <groupId>org.springframework</groupId>
         <artifactId>spring-test</artifactId>
         <version>${spring.framework.version}</version>
         <scope>test</scope>
      </dependency>

      <!-- GUAVA -->

      <dependency>
         <groupId>com.google.guava</groupId>
         <artifactId>guava</artifactId>
         <version>${guava.version}</version>
      </dependency>

      <!-- COMMONS APACHE -->

      <dependency>
         <groupId>commons-codec</groupId>
         <artifactId>commons-codec</artifactId>
         <version>${apache.commons-codec.version}</version>
      </dependency>

      <dependency>
         <groupId>commons-io</groupId>
         <artifactId>commons-io</artifactId>
         <version>${apache.commons-io.version}</version>
      </dependency>

      <dependency>
         <groupId>commons-lang</groupId>
         <artifactId>commons-lang</artifactId>
         <version>${apache.commons-lang.version}</version>
      </dependency>

      <!-- EASYMOCK -->

      <dependency>
         <groupId>org.easymock</groupId>
         <artifactId>easymock</artifactId>
         <version>${easymock.version}</version>
         <scope>test</scope>
      </dependency>

      <!-- JODATIME -->

      <dependency>
         <groupId>joda-time</groupId>
         <artifactId>joda-time</artifactId>
         <version>${joda-time.version}</version>
      </dependency>

      <!-- COMMONS DFCE -->

      <dependency>
         <groupId>fr.urssaf.image.commons</groupId>
         <artifactId>commons-dfce</artifactId>
         <version>${commons.dfce}</version>
      </dependency>

      <!-- Jackson -->
      <dependency>
         <groupId>com.fasterxml.jackson.core</groupId>
         <artifactId>jackson-databind</artifactId>
         <version>${jackson.version}</version>
      </dependency>

   </dependencies>
   <build>
      <plugins>
         <plugin>
            <inherited>true</inherited>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>aspectj-maven-plugin</artifactId>
            <configuration>
               <argumentFileName>builddef-sae-storage-dfce.lst</argumentFileName>
            </configuration>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>${maven-surefire-plugin.version}</version>
            <configuration>
               <excludes>
                  <exclude>**/BulkInsertionPerfFactory.java</exclude>
                  <exclude>**/InsertionServiceProviderTest.java
                  </exclude>
               </excludes>
            </configuration>
         </plugin>
      </plugins>
   </build>
</project>